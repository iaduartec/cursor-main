{
  // Activa Copilot para todos los lenguajes
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": true,
    "jsonc": true
  },

  // Inline suggestions sin barra, con tipografía monoespaciada
  "editor.inlineSuggest.enabled": true,
  "editor.inlineSuggest.fontFamily": "monospace",
  "editor.inlineSuggest.showToolbar": "never",

  // [No verificado] Puede variar por versión
  "editor.inlineSuggest.syntaxHighlightingEnabled": true,

  // Next Edit Suggestions (copilot “edits”)
  // [No verificado] Estas claves pueden ser experimentales o renombradas
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.nextEditSuggestions.fixes": true,
  "editor.inlineSuggest.edits.allowCodeShifting": "always", // [No verificado]
  "editor.inlineSuggest.edits.renderSideBySide": "auto", // [No verificado]

  // Aparición inmediata
  "editor.inlineSuggest.minShowDelay": 0
}
